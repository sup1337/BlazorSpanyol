@model int?

<div class="container mt-5">
    <h2 class="text-center mb-4">Quiz Setup</h2>

    <form asp-controller="Quiz" asp-action="Index" method="get" class="form-inline justify-content-center">
        <div class="form-group mb-3">
            <label for="numberOfQuestions" class="form-label">Number of Questions:</label>
            <input type="number" name="numberOfQuestions" id="numberOfQuestions" class="form-control mx-2" min="1" value="@Model" required />
        </div>
        <button type="submit" class="btn btn-primary">Start Quiz</button>
    </form>
</div>